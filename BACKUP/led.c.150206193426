#include<iom16v.h>
#include"595.h"
#include"16SPI.h"
uint i;




void led(uint select)
{	
	uchar left=0x01;
	uchar right=0x80;
	Driver_595_Init();
	do
	{	
		Driver_595(left,right);
		left<<=1;
		right>>=1;
		delay_ms(500);
	} 
	while(select=='1');
	
	do
	{	
		left=0x01;														
		right=0x80;
		for(i=0;i<8;i++)
		{	
			delay_ms(500);
			Driver_595(left,right);
			left<<=1;
			right>>=1;
		}
	} 
	while(select=='2');
	
}